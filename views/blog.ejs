<!DOCTYPE html>
<html lang="en">

<head>
    <%- include('./partials/head') %>
        <title>Blog</title>
</head>

<body>
    <%- include('./partials/navbar') %>
        <div class="container mt-4">
            <h1><%= blog.title %></h1>
            <img src="<%= blog.coverImageURL %>" width="700px">
            <p><%= blog.body %></p>
        </div>
       
        
       <div class="container mt-4">
         <h1>Comments</h1>
         <% if(locals.user) { %>
         <form action="/blog/comment/<%= blog.id %>" method="POST">
            <div class="mb-3 mt-4">
                <input 
                  type="text" 
                  class="form-control"
                  id="content"
                  name="content"
                />
            
            </div>
            <button type="submit" class="btn btn-primary">Submit</button>
        </form>
        <% } %>
      </div>
      <div class="mt-4">
         <% if(comments.length > 0) {%>
            <% comments.forEach(comment=>{ %>
                <div class="container mt-4">
                    <img src="<%= comment.createdBy.profileImageAvatar %>" width="50px"> <%= comment.createdBy.fullName %>
                    <pre><%= comment.content %></pre>
               </div>
            <%  }) %>
         <%  } %>
      </div>
    <%- include('./partials/scripts') %>
</body>

</html>